<h1>Band Info</h1>
<h1><%=@band.name%></h1>

<%=button_to "Edit", edit_band_path(@band.id), method: :get %>
<%=button_to "Delete", band_path(@band.id), method: :delete %>

<br>
<h2>Albums:</h2>
<ul>
    <%@band.albums.each do |album| %>
        <li><%=album.title%> <%= button_to "Edit", edit_album_path(album), method: :get %> </li>

    <%end%>
</ul>
<br>
<%=button_to "New Album", new_band_album_path(@band), method: :get%>

<br>

<%=button_to "All Bands", bands_path, method: :get %>