<% action = (album.persisted? ? album_url(album) : albums_url) %>
<% method = (album.persisted? ? :patch : :post) %>
<% message =(album.persisted? ? "Update Album" : "Create Album") %>

<form action="<%=action%>" method= "post">
    <input type="hidden" name= "_mathod" value="<%=method%>">
    <%=auth_token%>

    <label for="title">Title</label>
    <input type="text" id="title" name="album[title]" value="<%=album.title%>">

    <br>
    
    <label for="band">Band Select</label>
    <select type="select" name="album[band_id]" id="band">
        <%Band.all.each do |band|%>
            <option value="<%=band.id%>", <%= (@band.id == band.id ? "selected" : "")%> > <%=band.name%> </option>
        <%end%>
    </select>
    <br>

    <label for="year">Date Released</label>
    <input type="date" name="album[year]" id="year" value="<%=album.year%>">
    
    <br>
    <input type="radio" id="studio" name="album[live]" value="False" <%= (!album.live ? "checked" : "")%>>
    <label for="studio">Studio</label>
    <br>
    <input type="radio" id="live" name="album[live]" value="True" <%= (album.live ? "checked" : "")%> >
    <label for="live">Live</label>
    
    <br> 






</form>

